{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",  // ✅ Fix for JSX support
    "moduleResolution": "node",
    "esModuleInterop": true,  // ✅ recommended by ts-jest
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true
  },
  "include": ["src"]
}

